<h1>Who Gives?</h1>
<br/>
<h2><%= @contact.first_name %> <%= @contact.last_name %></h2>

<div class="row">
	<div class="col-md-6">
	<%= @contact.company %>
	<br/>
	
	<%= @contact.email %>
	<br/>

	<%= number_to_phone(@contact.phone_number) %>
	<br/>
	
	<%= @contact.address %>
	<br/>
	
	<%= @contact.linked_in %>
	<br/>

	<%= @contact.bio %>

	<br/>
	<%= link_to 'Edit', edit_contact_path %>
	<%= link_to 'Back', contacts_path %>
	</div>

	<div class="col-md-6">
	<h3>How much did they give?</h3>
	<%= number_to_currency(@contact.total_donations) %>
	<br/>
	<% if @contact.high_roller? %>
	<p>Gives a damn!</p>
	<% end %>
	<br/>
	<h3>When and in what amount?</h3>
	<%= form_for [@contact, @donation] do |f|  %>
		<%= f.label :date %>
		<%= f.date_select :date %>
		<br/>
		<%= f.label :amount %>
		<%= f.text_field :amount %>
		<br/>
		<%= f.submit %>
	<% end %> 

	<% @contact.donations.each do |donation| %>
		<p><%= donation.date %></p>
		<p><%= number_to_currency(donation.amount) %> </p>
		<%= link_to 'Delete', contact_donation_path(donation.contact_id, donation.id), confirm: 'Are you sure?', method: :delete %>
	<% end %>
	</div>
</div>

	<h2>Interactions</h2>
	<%= form_for [@contact, @interaction] do |f|  %>
		<%= f.label :interacted_at %>
		<%= f.datetime_select :interacted_at %>
		<br/>
		<%= f.label :note %>
		<%= f.text_area :note %>
		<br/>
		<%= f.submit %>
	<% end %> 

	<% @contact.interactions.each do |interaction| %>
		<p><%= interaction.interacted_at %></p>
		<p><%= interaction.note %> </p>
		<%= link_to 'Delete', contact_interaction_path(interaction.contact_id, interaction.id), confirm: 'Are you sure?', method: :delete %>
	<% end %>


	

	

	 

	


