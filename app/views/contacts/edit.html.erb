<h1>Update Who Gives</h1>

<%= form_for @contact, role: "form" do |form| %>
<section class="contact_form" >
	<div class="form-group">
		<%= form.label :first_name %>
		<%= form.text_field :first_name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.label :last_name %>
		<%= form.text_field :last_name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.label :company %>
		<%= form.text_field :company, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.label :email %>
		<%= form.email_field :email, class: "form-control" %>
	</div>	
	<div class="form-group">
		<%= form.label :phone_number %>
		<%= form.telephone_field :phone_number, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.label :address %>
		<%= form.text_area :address, class: "form-control" %>
	</div>	
	<div class="form-group">
		<%= form.label :linked_in %>
		<%= form.url_field :linked_in, class: "form-control" %>
	</div>	
	<div class="form-group">
		<%= form.label :bio %>
		<%= form.text_area :bio, class: "form-control" %>
	</div>	
	<br/>
	<%= form.submit class: "btn btn-info btn-xs" %>
<% end %>
<%= link_to 'Back', contacts_path, class: "btn btn-info btn-xs" %>
</section>	



