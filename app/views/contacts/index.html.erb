<div class="page-header">
  <h1>Who Gives?<small> View and manage your contacts</small></h1>
</div>

<%= form_tag contacts_path, method: :get do %>
<%= text_field_tag :query, params[:query],  placeholder: "Who Gives?" %>
<%= submit_tag "Search Contacts", class: "btn btn-info btn-sm" %>
<% end %>
<br/>
<%= link_to "Add a new contact", new_contact_path, class: "btn btn-info" %>
  
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th>Company</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Total Donations</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to contact.first_name, contact_path(contact) %></td>
        <td><%= link_to contact.last_name, contact_path(contact) %></td>
        <td><%= contact.company %></td>
        <td><%= contact.email %></td>
        <td><%= number_to_phone(contact.phone_number) %></td>
        <td><%= number_to_currency(contact.total_donations) %></td>  
        <td><%= link_to "Update", edit_contact_path(contact) %>
        <%= link_to "Delete", contact_path(contact), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>


